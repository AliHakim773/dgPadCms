@model Post

@{
    ViewData["Title"] = "Create Post";
}

<h1>Choose a PostType</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Choose">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PostTypeId" class="control-label"></label>
                <select name="pts" class="form-control" asp-items="ViewBag.PostTypeId">
                    <option hidden selected>Choose a Post Type</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Next Step" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
